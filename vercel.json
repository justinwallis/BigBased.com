{
  "version": 2,
  "builds": [
    {
      "src": "server.ts",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["collections/**", "seed/**", "payload.config.ts"]
      }
    }
  ],
  "routes": [
    {
      "src": "/admin(.*)",
      "dest": "/server.ts"
    },
    {
      "src": "/api(.*)",
      "dest": "/server.ts"
    },
    {
      "src": "/(.*)",
      "dest": "/server.ts"
    }
  ],
  "env": {
    "PAYLOAD_SECRET": "@payload-secret",
    "DATABASE_URL": "@database-url",
    "BLOB_READ_WRITE_TOKEN": "@blob-read-write-token"
  }
}
